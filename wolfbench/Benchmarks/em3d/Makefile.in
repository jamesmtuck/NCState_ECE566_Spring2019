include @top_builddir@/Makefile.defs

SRC_DIR=@abs_srcdir@
INSTALL_DIR=@prefix@/bin

vpath %.c $(SRC_DIR)
vpath %.cpp $(SRC_DIR)

programs = em3d

.PHONY: all install

all: $(addsuffix $(EXTRA_SUFFIX),$(programs)) 

install: all 

DEFS    = -U__GNUC__ -D_NO_LONGLONG -DPLAIN -DOLDEN

SOURCES = em3d.c main.c make_graph.c util.c args.c

# test information
INFILE  = /dev/null
OUTFILE = $(programs)$(EXTRA_SUFFIX).out
ARGS    = 160000 15 88
COMPARE = @abs_srcdir@/output.em3d $(OUTFILE)

include @abs_top_srcdir@/Makefile.benchmark
include @top_builddir@/Makefile.config
