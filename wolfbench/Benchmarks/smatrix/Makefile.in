include @top_builddir@/Makefile.defs

SRC_DIR=@abs_srcdir@
INSTALL_DIR=@prefix@/bin

vpath %.c $(SRC_DIR)
vpath %.cpp $(SRC_DIR)

programs = smatrix

.PHONY: all install

all: $(addsuffix $(EXTRA_SUFFIX),$(programs))

install: all 

DEFS    = -U__GNUC__ -D_NO_LONGLONG -DPLAIN -DOLDEN

SOURCES = smatrix.c

# test information
INFILE  = /dev/null
OUTFILE = $(programs)$(EXTRA_SUFFIX).out
ARGS    = 1024
COMPARE = $(OUTFILE) @abs_srcdir@/output.smatrix

# set longer timeout period for smatrix, default is 10s, raise to 20s
TIMEOUT = 20

include @abs_top_srcdir@/Makefile.benchmark
include @top_builddir@/Makefile.config
